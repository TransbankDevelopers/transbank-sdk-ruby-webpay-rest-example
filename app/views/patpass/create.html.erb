<h1>Ejemplo Crear Transacci√≥n Patpass by Webpay</h1>

<form class="patpass_form" action="<%= send_create_path %>" method="post" style="display: flex; flex-direction:column; width:50%;font-size: 20px;">
  <label for="buy_order">Orden de compra</label>
  <input id="buy_order" name="buy_order" value="<%= "buyorder" + Time.zone.now.to_i.to_s %>">

  <label for="session_id">Session ID</label>
  <input id="session_id" name="session_id" value="<%= "session123345567" + Time.zone.now.to_i.to_s %>"/>

  <label for="amount">Monto</label>
  <input id="amount" name="amount" value="1000"/>

  <label for="return_url">URL de retorno</label>
  <input id="return_url" name="return_url" value="http://0.0.0.0:3000/patpass/patpass_by_webpay/return_url"/>

  <label for="session_id_wpm_details">Session ID</label>
  <input type="text" name="wpm_detail[service_id]" id="session_id_wpm_details" value="<%= "123345567" + Time.zone.now.to_i.to_s %>">

  <label for="card_holder_id_wpm_details">Card Holder ID</label>
  <input type="text" name="wpm_detail[card_holder_id]" id="card_holder_id_wpm_details" value="12345">

  <label for="card_holder_name_wpm_details"> Card Holder Name</label>
  <input type="text" name="wpm_detail[card_holder_name]" id="card_holder_name_wpm_details" value="Juan">

  <label for="card_holder_last_name1_wpm_details">Card Holder Lastname 1</label>
  <input type="text" name="wpm_detail[card_holder_last_name1]" id="card_holder_last_name1_wpm_details" value="Perez">

  <label for="card_holder_last_name2_wpm_details">Card Holder Lastname 2</label>
  <input type="text" name="wpm_detail[card_holder_last_name2]" id="card_holder_last_name2_wpm_details" value="Gonzalez">

  <label for="card_holder_mail_wpm_details">Card Holder Mail</label>
  <input type="text" name="wpm_detail[card_holder_mail]" id="card_holder_mail_wpm_details" value="juan.perez@gmail.com">

  <label for="cellphone_number_wpm_details">Cellphone Number</label>
  <input type="text" name="wpm_detail[cellphone_number]" id="card_holder_mail_wpm_details" value="9912345678">

  <label for="expiration_date_wpm_details">Expiration Date</label>
  <input type="text" name="wpm_detail[expiration_date]" id="expiration_date_wpm_details" value="<%= (Time.now + 5.year).iso8601 %>">

  <label for="commerce_mail_wpm_details">Commerce Email</label>
  <input type="text" name="wpm_detail[commerce_mail]" id="commerce_mail_wpm_details" value="contacto@comercio.cl">

  <label for="uf_flag_wpm_details">UF Flag</label>
  <select id="uf_flag_wpm_details" name="wpm_detail[uf_flag]">
    <option value="true">true</option>
    <option value="false" selected="selected">false</option>
  </select>

  <button type="submit">Create transaction</button>
</form>