
<body>
<h1>Ejemplo Transaccion completa mall</h1>

<form class="transaccion_completa_form" action="/transaccion_completa/mall_deferred/create" method="post" style="display: flex; flex-direction:column; width:50%;font-size: 20px;">
  <label for="buy_order">
    Orden de compra
  </label>
  <input id="buy_order" name="buy_order" value="<%='buyorder' + Time.zone.now.to_i.to_s %>"/>

  <label for="session_id">
    Id de sesión
  </label>
  <input id="session_id" name="session_id" value="<%='session' + Time.zone.now.to_i.to_s %>" />

  <label for="card_number">
    Numero de tarjeta
  </label>
  <input id="card_number" name="card_number" value="4051885600446623"/>

  <label for="cvv">
    CVV
  </label>
  <input id="cvv" name="cvv" value="123"/>

  <label for="card_expiration_date">
    Fecha de expiracion (AA/MM)
  </label>
  <input id="card_expiration_date" name="card_expiration_date" value="<%= Date.new(Time.now.year + 5, Time.now.month, Time.now.day).strftime("%y/%m")
  %>"/>

  <h2>Detalles</h2>
  <hr>

  <label for="details_commerce_code">Detalles de transacción 1</label>
  <select id="details_commerce_code" name="detail[details][][commerce_code]">
    <option selected="selected" value="<%= @child_commerce_codes.first %>"> Comercio 1 - Codigo <%= @child_commerce_codes.first %></option>
    <option value="<%= @child_commerce_codes.second %>">Comercio 2 - Codigo <%= @child_commerce_codes.second %></option>
  </select>


  <label for="details_buy_order">Orden de compra (comercio hijo)</label>
  <input id="details_buy_order" name="detail[details][][buy_order]" value="<%= 'abcdef' + Time.zone.now.to_i.to_s %>"/>

  <label for="details_amount">Monto</label>
  <input id="details_amount" name="detail[details][][amount]" value="1000"/>

  <hr>

  <label for="details_commerce_code">Detalles de transacción 2</label>
  <select id="details_commerce_code" name="detail[details][][commerce_code]">
    <option value="<%= @child_commerce_codes.first %>"> Comercio 1 - Codigo <%= @child_commerce_codes.first %></option>
    <option selected="selected" value="<%= @child_commerce_codes.second %>">Comercio 2 - Codigo <%= @child_commerce_codes.second %></option>
  </select>


  <label for="details_buy_order">Orden de compra (comercio hijo)</label>
  <input id="details_buy_order" name="detail[details][][buy_order]" value="<%= 'vwxyz' + Time.zone.now.to_i.to_s %>"/>

  <label for="details_amount">Monto</label>
  <input id="details_amount" name="detail[details][][amount]" value="2000"/>

  <button type="submit">Aceptar</button>
</form>

</body>