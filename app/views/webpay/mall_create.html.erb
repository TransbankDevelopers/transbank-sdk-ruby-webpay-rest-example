<h1>Ejemplo Webpay Plus Transaccion Mall</h1>

<form class="webpay_form" action='/webpayplus/mall/create' method="post" style="display: flex; flex-direction:column; width:50%;font-size: 20px;">

  <label for="merchant_1_amount">Monto comercio 1</label>
  <input id="merchant_1_amount" name="detail[details][][amount]" value="1000">

  <label for="merchant_1_commerce_code">Codigo comercio del comercio 1</label>
  <input id="merchant_1_commerce_code" name="detail[details][][commerce_code]" value="597055555537">

  <label for="merchant_1_buy_order">Orden de compra comercio 1</label>
  <input id="merchant_1_buy_order" name="detail[details][][buy_order]" value=<%= "123buyorder1" + Time.now.to_i.to_s  %>>


  <label for="merchant_2_amount">Monto comercio 2</label>
  <input id="merchant_2_amount" name="detail[details][][amount]" value="2000">

  <label for="merchant_2_commerce_code">Codigo comercio del comercio 2</label>
  <input id="merchant_2_commerce_code" name="detail[details][][commerce_code]" value="597055555536">

  <label for="merchant_2_buy_order">Orden de compra comercio 2</label>
  <input id="merchant_2_buy_order" name="detail[details][][buy_order]" value=<%= "123buyorder2" + Time.now.to_i.to_s %>>

  <label for="parent_merchant_buy_order">Orden de compra comercio Padre</label>
  <input id="parent_merchant_buy_order" name="buy_order" value=<%= '222333' + Time.now.to_i.to_s %>>

  <label for="session_id_parent">
    Session id comercio padre
  </label>
  <input id="session_id_parent" name="session_id" value=<%= '123session_parent' + Time.now.to_i.to_s %>>


  <label for="return_url">
    URL de retorno
  </label>
  <input id="return_url" name="return_url" value="<%= "#{root_url}webpayplus/mall/return_url" %>"/>

  <button type="submit">Aceptar</button>
</form>

</body>